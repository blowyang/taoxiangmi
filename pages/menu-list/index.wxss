.goods-container{
  width: 100%;
  margin-bottom: 100px;
}
.goods-box{
  width: 45%;
  margin: 20px 0 0 13px;
  display: inline-block;
}
.img-box image{
  width:100%;
  height:190px;
  border-top-left-radius:3px;
  border-top-right-radius:3px;
}
.img-box{
  width:100%;
  height:205px;
  background-color:#f5f5f5;
  margin-bottom:5px;
  position: relative;
  border-top-left-radius:3px;
  border-top-right-radius:3px;
  overflow: hidden;
}
.goods-characteristic{
  font-size:22rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  background-color:#f0ece1;
  color:#a18d65;
  height:35px;
  line-height:35px;
  display:inline-block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding-left: 5px;
  border-bottom-right-radius:3px;
  border-bottom-left-radius:3px;
}
.goods-title{
  font-size:28rpx;
  color:#333333;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  padding: 0 5px;
}
.goods-price{
  color:#b5272d;
  font-size:28rpx;
  text-align:left;
  width:100%;
  padding:3px 4px;
}
.goods-price-naver{
  color:#999;
  font-size:24rpx;
  line-height:28px;
  width:100%;
  text-align:right;
  padding:0 3px;
}
.no-more-goods{
  text-align: center;
}
.no-order-img{
  width:110px;
  height:110px;
}
.no-more-goods .text{
  font-size:28rpx;
  color:#999;
  margin-top: -5px;
}