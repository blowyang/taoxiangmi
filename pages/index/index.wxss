  background-color:blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}
/*-----------sale----------*/
.sale-banners{
  text-align:center;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1px solid #f5f5f5;
}
.sale-imge{
  width:33%;
  color: #333;
  font-size: 26rpx;
  padding-top:15px;
  display:inline-block;
}
